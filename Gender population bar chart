import matplotlib.pyplot as plt

# Sample data for gender distribution
genders = ['Male', 'Female', 'Non-Binary', 'Other']
counts = [300, 350, 50, 30]  # Example counts for each gender category

plt.figure(figsize=(8, 6))
plt.bar(genders, counts, color=['blue', 'pink', 'purple', 'gray'])  # Customize colors as desired
plt.title('Gender Distribution in Population')
plt.xlabel('Gender')
plt.ylabel('Count')
plt.grid(axis='y', linestyle='--', alpha=0.7)  # Add grid lines for better readability
plt.show()
